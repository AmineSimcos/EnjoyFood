<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragmentProfile">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#3333"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgv_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="@string/menu_profile"
        android:src="@drawable/sdfqfqsfdsqd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mohammed Amine BAICH"
        android:textColor="#000"
        android:layout_below="@+id/imgv_profile"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android developper"
        android:layout_below="@+id/txt_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>
    

    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        android:layout_below="@id/desc"
        android:id="@+id/tv_label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:drawableStart="@drawable/ic_baseline_email_24"
        />

    <TextView
        android:id="@+id/tv_label_telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Téléphone:"
        />

    <TextView
        android:id="@+id/tv_label_adresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adresse:"
        />

    <TextView
        android:id="@+id/tv_label_pays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pays:"
        />

</RelativeLayout>