<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="visible"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <Spinner
            android:layout_marginTop="20dp"
            android:id="@+id/echel_spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/layout_qt1"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_icone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icons8spoon00"/>
            <TextView
                android:id="@+id/tv_img_icone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="25 g"
                android:layout_below="@id/img_icone"
                android:layout_alignStart="@id/img_icone"/>

        </LinearLayout>
        <TextView
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textColor="#000"
            android:textSize="26sp"/>
        <TextView
            android:id="@+id/tv_nbr_cons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="2"
            android:textSize="26sp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textColor="#000"
            android:textSize="26sp"/>
        <TextView
            android:id="@+id/tv_result"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textColor="#000"
            android:textSize="26sp"/>
        <TextView
            android:id="@+id/tv_unity"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="g"
            android:textColor="#000"
            android:textSize="26sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_qt2"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_icone2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/portion"/>

        <EditText
            android:id="@+id/et_qt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:inputType="number"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="@string/unity_g"
            android:textSize="26sp"
            android:layout_toEndOf="@id/img_icone"
            android:layout_alignBottom="@id/img_icone"
            android:layout_marginStart="20dp"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/btns_plus_moin"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_moin"
            android:layout_margin="6dp"
            android:src="@drawable/ic_moin"
            android:layout_width="60dp"
            android:layout_height="60dp"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_plus"
            android:layout_margin="6dp"
            android:src="@drawable/ic_plus"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

    </LinearLayout>

</LinearLayout>


